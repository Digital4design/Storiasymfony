{% extends 'base.html.twig' %}

{% block title %}Content index{% endblock %}

{% block content %}
    <h1>Content index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Content</th>
                <th>Status</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for content in contents %}
            <tr>
                <td>{{ content.id }}</td>
                <td>{{ content.title }}</td>
                <td>{{ content.description }}</td>
                <td>{{ content.content }}</td>
                <td>{{ content.isActive==0 ? 'Pending' : (content.isActive==1 ? 'Approved'  : 'Rejected') }} </td>
                <td>{{ content.email }}</td>
                <td>
                    <a href="{{ path('content_show', {'id': content.id}) }}">show</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
